{
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "types": ["jest"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.spec.ts",
    "src/setup-jest.ts"
  ]
}
